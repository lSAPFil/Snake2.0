<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:backgroundTint="#48348E"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <com.example.snake20.GameView
        android:id="@+id/gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />
<RelativeLayout
    android:visibility="invisible"
    android:id="@+id/swipe"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="500dp"
        >
        <ImageView
            android:layout_width="400dp"
            android:layout_height="500dp"
            android:contentDescription="@string/description"
            android:scaleType="fitXY"
            android:src="@drawable/swipe" />
    </LinearLayout>


</RelativeLayout>
    <RelativeLayout
        android:visibility="invisible"
        android:id="@+id/bd_dialog"
        android:backgroundTint="#48348E"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height="400dp"
            >

            <ImageView

                android:layout_width="350dp"
                android:layout_height="400dp"
                android:contentDescription="@string/description"
                android:scaleType="fitXY"
                android:src="@drawable/bg_dialog" />


            <LinearLayout
                android:layout_width="95dp"
                android:layout_height="60dp"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"></LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="60dp"
            android:layout_centerHorizontal="true"
            android:layout_height="60dp"
            android:layout_margin="250dp"
            >
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitXY"
                app:tint="#FFEB3B"
                android:src="@drawable/ic_baseline_emoji_events_24"
                android:contentDescription="@string/description"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="100dp"
            android:layout_marginHorizontal="200dp"
            android:layout_height="60dp"
            android:layout_marginVertical="260dp"
            >
            <TextView
                android:id="@+id/txt_best_score_final"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:text="0"
                android:layout_marginHorizontal="30dp"
                android:layout_width="90dp"
                android:layout_height="60dp"/>
        </LinearLayout>



    </RelativeLayout>
    <RelativeLayout
        android:backgroundTint="#48348E"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height="400dp"
            >

            <ImageView
                android:visibility="visible"
                android:id="@+id/helpPage1"
                android:layout_width="350dp"
                android:layout_height="400dp"
                android:contentDescription="@string/description"
                android:scaleType="fitXY"
                android:src="@drawable/help_page1" />
        </LinearLayout>
</RelativeLayout>

    <RelativeLayout
        android:backgroundTint="#48348E"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height="400dp"
            >

            <ImageView
                android:visibility="invisible"
                android:id="@+id/helpPage2"
                android:layout_width="350dp"
                android:layout_height="400dp"
                android:contentDescription="@string/description"
                android:scaleType="fitXY"
                android:src="@drawable/help_page2" />
        </LinearLayout>
    </RelativeLayout>


    <RelativeLayout
        android:backgroundTint="#48348E"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height="400dp"
            >

            <ImageView
                android:visibility="invisible"
                android:id="@+id/helpPage3"
                android:layout_width="350dp"
                android:layout_height="400dp"
                android:contentDescription="@string/description"
                android:scaleType="fitXY"
                android:src="@drawable/help_page3" />
        </LinearLayout>
    </RelativeLayout>

    <RelativeLayout
        android:backgroundTint="#48348E"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="350dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_height="400dp"
            >

            <ImageView
                android:visibility="invisible"
                android:id="@+id/helpPage4"
                android:layout_width="350dp"
                android:layout_height="400dp"
                android:contentDescription="@string/description"
                android:scaleType="fitXY"
                android:src="@drawable/help_page4" />
        </LinearLayout>
    </RelativeLayout>

















    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="#6335B5"
        android:alpha="0.8"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:weightSum="2"
        android:baselineAligned="false">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                tools:ignore="UselessParent">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/apple"
                    android:contentDescription="@string/description"/>

                <TextView
                    android:id="@+id/txt_score"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_centerInParent="true"
                tools:ignore="UselessParent">
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_baseline_emoji_events_24"
                    app:tint="#FFEB3B"
                    android:contentDescription="@string/description"/>

                <TextView
                    android:id="@+id/txt_best_score"
                    android:textColor="#ffffff"
                    android:textSize="30sp"
                    android:text="0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>



</RelativeLayout>